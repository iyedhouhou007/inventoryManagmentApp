<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.ButtonType?>
<?import javafx.scene.control.DialogPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<DialogPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.iyed_houhou.inventoryManagementApp.controllers.ProductCardDetailsController">
    <content>
        <VBox spacing="10" alignment="CENTER">
            <Label fx:id="productNameLabel" text="Product Name" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            <Label fx:id="productPriceLabel" text="Price" style="-fx-font-size: 14px;"/>
            <Label fx:id="productSupplierLabel" text="Supplier" style="-fx-font-size: 14px;"/>
            <Label fx:id="productQuantityLabel" text="Quantity" style="-fx-font-size: 14px;"/>
        </VBox>
    </content>
    <ButtonType text="Close"/>
</DialogPane>
