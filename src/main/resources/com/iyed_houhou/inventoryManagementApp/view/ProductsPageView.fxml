<BorderPane xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.iyed_houhou.inventoryManagementApp.controllers.ProductsPageViewController">

    <!-- Header -->
    <top>
        <HBox alignment="CENTER" spacing="10" styleClass="header">
            <Label fx:id="appLabel" styleClass="header-label" text="Dashboard - Inventory Management App" />
        </HBox>
    </top>

    <!-- Left Sidebar -->
    <left>
        <VBox alignment="TOP_CENTER" prefHeight="512.0" prefWidth="184.0" spacing="10" styleClass="sidebar">
            <Label styleClass="sidebar-label" text="Menu" />
            <Button onAction="#openDashboardPage" styleClass="sidebar-button" text="Dashboard" />
            <Button onAction="#openAddSalePage" styleClass="sidebar-button" text="Add Sale" />
            <Button id="active-page" onAction="#openProductsPage" styleClass="sidebar-button" text="Products" />
            <Button onAction="#openReportsPage" styleClass="sidebar-button" text="Reports" />
            <Button onAction="#openSuppliersPage" styleClass="sidebar-button" text="Suppliers" />
            <Button onAction="#openSettingsPage" styleClass="sidebar-button" text="Settings" />
            <Button onAction="#logout" text="Logout">
                <styleClass>
                    <String fx:value="sidebar-button" />
                    <String fx:value="logout-button" />
                </styleClass>
            </Button>
        </VBox>
    </left>


    <!-- Main Content Area -->
    <center>
         <VBox alignment="TOP_CENTER" maxHeight="1080.0" maxWidth="1980.0" spacing="20" styleClass="main-content">
             <FlowPane hgap="5.0" vgap="10.0">
                 <VBox.margin>
                     <Insets top="15.0" />
                 </VBox.margin>
                 <Group>
                     <Label layoutY="7.0" text="Product id:" />
                     <TextField fx:id="productIdField" layoutX="77.0" promptText="Enter product name" />
                 </Group>
                 <Group>
                     <Label layoutY="7.0" text="Product Name:" />
                     <TextField fx:id="productNameField" layoutX="106.0" promptText="Enter product name" />
                 </Group>
                 <Group>
                     <Label layoutY="5.0" text="Product Price:" />
                     <TextField fx:id="productPriceField" layoutX="98.0" promptText="Enter product price" />
                 </Group>
                 <Group>
                     <Label layoutY="7.0" text="Product quantity:" />
                     <TextField fx:id="productQuantityField" layoutX="122.0" promptText="Enter product quantity" />
                 </Group>
                 <Group>
                     <Label layoutY="7.0" text="Product expiration Date:" />
                     <TextField fx:id="productBuyPriceField" layoutX="122.0" promptText="Enter buy Price" />
                 </Group>
<!--                 <Group>-->
<!--                     <Label layoutY="2.0" text="supplier: "/>-->
<!--                     <ComboBox fx:id="productSupplierField" layoutX="70.0" prefWidth="150.0"/>-->
<!--                 </Group>-->
                 <Button onAction="#addProduct" styleClass="add-product-btn" text="Add Product">
               <FlowPane.margin>
                  <Insets left="20.0" />
               </FlowPane.margin></Button>
             </FlowPane>
             <!-- Title -->
             <Label text="Products" />
             <FlowPane fx:id="productContainer" hgap="10.0" prefHeight="1080.0" prefWidth="1920.0" vgap="10.0">
             </FlowPane>
         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0" />
         </padding>
         </VBox>
    </center>

    <!-- Footer -->
    <bottom>
        <HBox alignment="CENTER" spacing="10" styleClass="footer">
            <Label styleClass="footer-label" text="Â© 2025 Inventory Management App | All Rights Reserved" />
        </HBox>
    </bottom>

    <stylesheets>
        <URL value="@../styles/global.css" />
        <URL value="@../styles/productsPageStyles.css" />
        <URL value="@../styles/navBarStyles.css" />
    </stylesheets>
</BorderPane>
